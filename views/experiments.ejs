	<link href="/stylesheets/table.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
	<link href='/stylesheets/template_routes.css' rel='stylesheet'>

</head>

<body>

<div class="logout-block">
	<a href="/select">
		<img src="/images/user_icon.png" alt="REAL" height="35" width="35">
	</a>
	<span> <%= user.username %> </span>
	<a href="/logout">
   	<button>Loguot</button>
    </a>
</div>

<div id="cabeceraDiv">

	<p><strong><font color="#CC0000" size="6">&nbsp;<img src="/images/imagenes/lupa.gif" width="28" height="27" align="absmiddle"> Archivos de experimentos del usuario: <%= user.username %></font></strong></p>
	<hr size="4" noshade color="#660000">
	<!-- <h1 class="usuario">User Experimental Data: <%= user.username %> </h1> -->
	<blockquote>
	<p class="instrucciones"> 
		Next, we show the list of files that store the experiments performed by the students. They are sorted by day and hour. To download them, press the right icon. 
	</p>

</div>

<script type="text/javascript">

	var files = {name: 0, size: []};
	files.name = <%- JSON.stringify(names) %>;
	files.date = <%- JSON.stringify(dates) %>;
	//var files = <%= names %>;
	files.size = <%- JSON.stringify(sizes) %>;
	//files.size = <%= sizes %>;
	var table = '<table id="table-2" align="center" bgcolor="#ECECEC">';
	
		table += '<thead><th>Día</th><th>Hora</th><th>Tamaño</th><th>Enlace</th></thead>';
		
		for (i = 0; i < files.name.length; i++) {
			table += '<tr>';
				//table += '<td>' + files.name[i].split('_')[1] + '</td>';
				table += '<td>' + new Date(files.date[i]).toLocaleDateString() + '</td>';
				//table += '<td>' + files.name[i].split(/_|\./)[2] + '</td>';
				table += '<td>' + new Date(files.date[i]).toLocaleTimeString() + '</td>';
				table += '<td>' + files.size[i] + '</td>';
				//table += '<td><a href=/download/' + files.name[i] + '</a></td>';
				table += '<td><a href=/download/' + files.name[i] + '>' + 'link' + '</a></td>';
			table += '</tr>';
		}
	
	table += '</table>';
	
	document.write(table);

</script>

	<hr size="4" noshade color="#660000">

</body>

</html>