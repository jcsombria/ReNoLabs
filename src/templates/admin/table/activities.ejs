<table class="table table-sm table-striped table-hover table-borderless caption-top" id="activitiesTable">
  <caption>Actividades disponibles</caption>
  <thead class="table-primary">
    <tr>
      <th scope="col" class="align-middle"><input type="checkbox"></input></th>
      <th scope="col">Nombre</th>
      <th scope="col">Vista</th>
      <th scope="col">Controlador</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% result.forEach(function(a){ %>
      <tr id="activity-<%= a.name %>">
        <td class="align-middle"><input type="checkbox"></input></td>
        <th scope="row"><%= a.name %></th>
        <td><%= a.View.name %></td>
        <td><%= a.Controller.name %></td>
        <td><i class="bi bi-hand-index-thumb"></i></td>
      </tr>
    <% }); %>
  </tbody>
  <tfoot class="table-primary">
  </tfoot>
</table>