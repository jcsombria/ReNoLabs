<!DOCTYPE html>
<html>
  <head>
    <%- include('ui/header'); %>
  </head>
  <body>
    <%- include('ui/menu', {user: user}); %>
    <div class="container-fluid d-flex m-3 justify-content-center">

      <div class="card text-center mx-3">
        <div class="card-header"><h5 class="text-center">Actividades Disponibles</h5></div>
        <div class="card-body">
          <div class="container d-flex flex-row flex-wrap align-items-center">
          <% activities.forEach(a => { %>
            <div class="card text-center" style="width: 270px; height: 400px">
              <div class="card-body mb-3">
                <% if (a.state == "idle") { %>
                <a href="activity?name=<%= a.name %>" class="btn btn-success mb-3">Entra en esta actividad</a>
                <% } else if (a.state == "busy" ) { %>
                <a href="activity?name=<%= a.name %>" class="btn btn-danger mb-3 disabled">Actividad ocupada</a>
                <% } %>
                <img src="activities/<%= a.image %>" class="mb-3" width="230" alt="Imagen de la actividad <%= a.name%>">
                <h6 class="card-title fw-bold"><%= a.name %></h6>
                <p class="card-text"><%= a.description %></p>
              </div>
            </div>
          <% }) %>
          </div>
       </div>
     </div>


     <div class="card w-25">
       <div class="card-header text-nowrap"><h5 class="text-center">Ãšltimos Experimentos</h5></div>
       <div class="card-body" id="data"><%- include('table/experiments'); %></div>
     </div>
  </div>
</body>
</html>
